FROM python:3.10-slim

# Create a non-root user for running the application
RUN groupadd -r elson && useradd -r -g elson -m -d /home/elson elson

# Set the working directory (owned by root initially)
WORKDIR /app

# Install only essential system dependencies with minimal additional packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    postgresql-client \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get autoremove -y

# Install Python dependencies as root
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Set proper permissions for the non-root user
RUN chown -R elson:elson /app

# Set environment variables for Python
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_NO_CACHE_DIR=1

# Set proper permissions for directories that need write access
RUN mkdir -p /app/logs && \
    chown -R elson:elson /app/logs

# Switch to non-root user
USER elson

# Expose port
EXPOSE 8000

# Set health check
HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD curl -f http://localhost:8000/health || exit 1

# Run with hot-reload for development
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
