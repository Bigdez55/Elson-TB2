FROM node:18-alpine

# Create a non-root user for running the application
RUN addgroup -S elson && adduser -S -G elson elson

# Set the working directory (owned by root initially)
WORKDIR /app

# Install only production dependencies first to leverage caching
COPY package.json package-lock.json ./
RUN npm ci --only=production && \
    # Then install development dependencies
    npm ci && \
    # Make npm commands available to the non-root user  
    npm config set unsafe-perm true && \
    # Clean npm cache to reduce image size
    npm cache clean --force

# Copy application code
COPY --chown=elson:elson . .

# Set proper permissions for the non-root user
RUN chown -R elson:elson /app

# Set environment variables
ENV NODE_ENV=development

# Switch to non-root user
USER elson

# Expose port
EXPOSE 3000

# Set health check
HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD wget -q -O- http://localhost:3000/health || exit 1

# Run in development mode
CMD ["npm", "run", "start"]
