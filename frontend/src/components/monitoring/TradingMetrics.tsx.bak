import React, { useState, useEffect } from 'react';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Alert, AlertDescription } from '@/components/ui/alert';
import { Progress } from '@/components/ui/progress';
import { 
  TrendingUp, 
  TrendingDown, 
  AlertTriangle,
  Activity,
  DollarSign,
  BarChart
} from 'lucide-react';

interface MetricsSummary {
  metrics: {
    counters: Record<string, number>;
    gauges: Record<string, number>;
    histograms: Record<string, {
      count: number;
      min: number;
      max: number;
      avg: number;
      last: number;
    }>;
  };
  trading: {
    recent_trade_count: number;
    success_rate: number;
    last_trade: any;
  };
  performance: Record<string, {
    count: number;
    avg: number;
    max: number;
    min: number;
  }>;
  timestamp: string;
}

const TradingMetrics: React.FC = () => {
  const [metrics, setMetrics] = useState<MetricsSummary | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    fetchMetrics();
    const interval = setInterval(fetchMetrics, 30000); // Update every 30 seconds
    return () => clearInterval(interval);
  }, []);

  const fetchMetrics = async () => {
    try {
      const response = await fetch('/api/v1/monitoring/metrics', {
        headers: {
          'Authorization': `Bearer ${localStorage.getItem('token')}`
        }
      });
      
      if (!response.ok) throw new Error('Failed to fetch metrics');
      
      const data = await response.json();
      setMetrics(data);
      setError(null);
    } catch (err) {
      setError(err instanceof Error ? err.message : 'Failed to load metrics');
    } finally {
      setLoading(false);
    }
  };

  if (loading) return <div>Loading metrics...</div>;
  if (error) return <Alert variant="destructive"><AlertDescription>{error}</AlertDescription></Alert>;
  if (!metrics) return null;

  const successRate = metrics.trading.success_rate * 100;
  const portfolioValue = metrics.metrics.gauges['portfolio_value'] || 0;
  const portfolioReturn = metrics.metrics.gauges['portfolio_daily_return_percent'] || 0;
  
  return (
    <div className="grid gap-4 md:grid-cols-2 lg:grid-cols-4">
      {/* Portfolio Value Card */}
      <Card>
        <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
          <CardTitle className="text-sm font-medium">Portfolio Value</CardTitle>
          <DollarSign className="h-4 w-4 text-muted-foreground" />
        </CardHeader>
        <CardContent>
          <div className="text-2xl font-bold">${portfolioValue.toLocaleString()}</div>
          <div className={`flex items-center text-xs ${portfolioReturn >= 0 ? 'text-green-600' : 'text-red-600'}`}>
            {portfolioReturn >= 0 ? <TrendingUp className="h-3 w-3 mr-1" /> : <TrendingDown className="h-3 w-3 mr-1" />}
            {Math.abs(portfolioReturn).toFixed(2)}%
          </div>
        </CardContent>
      </Card>

      {/* Trading Success Rate */}
      <Card>
        <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
          <CardTitle className="text-sm font-medium">Success Rate</CardTitle>
          <BarChart className="h-4 w-4 text-muted-foreground" />
        </CardHeader>
        <CardContent>
          <div className="text-2xl font-bold">{successRate.toFixed(1)}%</div>
          <Progress value={successRate} className="mt-2" />
          <p className="text-xs text-muted-foreground mt-1">
            {metrics.trading.recent_trade_count} recent trades
          </p>
        </CardContent>
      </Card>

      {/* System Performance */}
      <Card>
        <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
          <CardTitle className="text-sm font-medium">System Performance</CardTitle>
          <Activity className="h-4 w-4 text-muted-foreground" />
        </CardHeader>
        <CardContent>
          {Object.entries(metrics.performance).slice(0, 2).map(([op, stats]) => (
            <div key={op} className="mt-2">
              <p className="text-xs font-medium">{op}</p>
              <p className="text-xs text-muted-foreground">
                Avg: {(stats.avg * 1000).toFixed(0)}ms
              </p>
            </div>
          ))}
        </CardContent>
      </Card>

      {/* Alerts/Warnings */}
      <Card>
        <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
          <CardTitle className="text-sm font-medium">System Status</CardTitle>
          <AlertTriangle className="h-4 w-4 text-muted-foreground" />
        </CardHeader>
        <CardContent>
          <div className="space-y-2">
            {Object.entries(metrics.performance).some(([_, stats]) => stats.max > 1) ? (
              <Alert>
                <AlertTriangle className="h-4 w-4" />
                <AlertDescription>
                  Slow operations detected
                </AlertDescription>
              </Alert>
            ) : (
              <p className="text-sm text-green-600">All systems operational</p>
            )}
          </div>
        </CardContent>
      </Card>

      {/* Recent Trade Details */}
      {metrics.trading.last_trade && (
        <Card className="col-span-full">
          <CardHeader>
            <CardTitle className="text-sm font-medium">Last Trade</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
              <div>
                <p className="text-muted-foreground">Symbol</p>
                <p className="font-medium">{metrics.trading.last_trade.symbol}</p>
              </div>
              <div>
                <p className="text-muted-foreground">Type</p>
                <p className="font-medium">{metrics.trading.last_trade.trade_type}</p>
              </div>
              <div>
                <p className="text-muted-foreground">Quantity</p>
                <p className="font-medium">{metrics.trading.last_trade.quantity}</p>
              </div>
              <div>
                <p className="text-muted-foreground">Status</p>
                <p className={`font-medium ${
                  metrics.trading.last_trade.status === 'filled' ? 'text-green-600' : 'text-red-600'
                }`}>
                  {metrics.trading.last_trade.status}
                </p>
              </div>
            </div>
          </CardContent>
        </Card>
      )}
    </div>
  );
};

export default TradingMetrics;