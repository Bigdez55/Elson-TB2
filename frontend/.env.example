# Development Environment Configuration for Frontend
# ===================================================
# Copy this file to .env.local for local development

# React App Environment
REACT_APP_ENV=development

# API Configuration
# For local development, backend runs on port 8000
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws

# App Configuration
REACT_APP_APP_NAME=Elson Trading Platform
REACT_APP_APP_VERSION=1.0.0
REACT_APP_COMPANY_NAME=Elson Trading

# Feature Flags
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_PORTFOLIO_CHARTS=true
REACT_APP_ENABLE_REAL_TIME_QUOTES=true
REACT_APP_ENABLE_PAPER_TRADING=true
REACT_APP_ENABLE_LIVE_TRADING=false
REACT_APP_ENABLE_WEBSOCKETS=true

# Trading Configuration
REACT_APP_DEFAULT_TRADING_MODE=paper
REACT_APP_ENABLE_AI_TRADING=true
REACT_APP_ENABLE_FAMILY_ACCOUNTS=true

# Performance & Optimization
REACT_APP_ENABLE_SERVICE_WORKER=false
REACT_APP_CACHE_STRATEGY=network-first
REACT_APP_API_TIMEOUT=10000

# WebSocket Configuration
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=5
REACT_APP_WS_HEARTBEAT_INTERVAL=30000

# Data Refresh Intervals (milliseconds)
REACT_APP_QUOTE_REFRESH_INTERVAL=5000
REACT_APP_PORTFOLIO_REFRESH_INTERVAL=30000
REACT_APP_ORDER_HISTORY_REFRESH_INTERVAL=30000
REACT_APP_NEWS_REFRESH_INTERVAL=300000

# Analytics (Optional)
REACT_APP_GA_MEASUREMENT_ID=
REACT_APP_ENABLE_ANALYTICS=false

# Error Tracking (Optional)
REACT_APP_SENTRY_DSN=
REACT_APP_ENABLE_ERROR_TRACKING=false

# Build Configuration
GENERATE_SOURCEMAP=true
BUILD_PATH=build

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_DEBUG_MODE=true
REACT_APP_MOCK_API=false
