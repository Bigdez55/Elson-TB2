  "dream_team_model": {
    "description": "Coordinated team of professionals for optimal succession outcome",
    "team_members": {
      "cfp_quarterback": {
        "role": "Certified Financial Planner as central coordinator",
        "responsibilities": [
          "Define personal financial objectives for owner",
          "Assess how deal structures affect retirement",
          "Coordinate communication among team",
          "Ensure alignment with owner's life goals",
          "Plan post-transaction investment strategy"
        ]
      },
      "ma_attorney": {
        "role": "M&A or Business Succession Attorney",
        "responsibilities": [
          "Structure transaction legally",
          "Draft purchase agreements",
          "Negotiate deal terms",
          "Manage legal due diligence",
          "Address legal risks and liabilities",
          "Ensure regulatory compliance"
        ]
      },
      "cpa_tax_expert": {
        "role": "CPA with Transaction Tax Expertise",
        "responsibilities": [
          "Minimize tax implications",
          "Structure for optimal tax treatment",
          "Validate financial statements for buyer",
          "Post-transaction tax planning",
          "Installment sale structuring"
        ]
      },
      "valuation_expert": {
        "role": "Business Valuation Professional (ASA/CVA)",
        "responsibilities": [
          "Objective business valuation",
          "Establish defensible pricing",
          "Create defense against tax challenges",
          "Fairness opinions when needed",
          "Discount analysis (minority, marketability)"
        ]
      },
      "estate_planning_attorney": {
        "role": "Estate Planning Attorney",
        "responsibilities": [
          "Update estate plan for new circumstances",
          "Structure seller notes for protection",
          "Trust adjustments for sale proceeds",
          "Gift tax planning for family transfers",
          "Asset protection for proceeds"
        ]
      },
      "wealth_manager": {
        "role": "Wealth Manager (CPWA or CFP)",
        "responsibilities": [
          "Post-transaction investment strategy",
          "Tax optimization of investment portfolio",
          "Retirement income planning",
          "Philanthropic planning",
          "Multi-generational planning"
        ]
      }
    },
