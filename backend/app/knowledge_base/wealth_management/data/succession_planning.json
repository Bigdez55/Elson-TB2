  "tax_planning_strategies": {
    "installment_sale": {
      "description": "Seller receives payments over time, spreading gain recognition",
      "benefits": [
        "Spread capital gains over years",
        "Retirement income stream",
        "Potential lower tax brackets"
      ],
      "irc_section": "Section 453",
      "requirements": [
        "At least one payment after year of sale",
        "Cannot be publicly traded stock"
      ]
    },
    "section_1042_esop_rollover": {
      "description": "Defer capital gains on sale to ESOP by reinvesting in qualified replacement property",
      "requirements": [
        "Sell to ESOP",
        "ESOP must own at least 30% after sale",
        "Reinvest in QRP within 15 months",
        "Must hold QRP for life or pay deferred tax"
      ]
    },
    "qualified_small_business_stock": {
      "acronym": "QSBS",
      "description": "Exclusion of gain on sale of qualified small business stock",
      "irc_section": "Section 1202",
      "exclusion": "Up to 100% of gain (up to $10M or 10x basis)",
      "requirements": [
        "C corporation stock",
        "Held more than 5 years",
        "Issued after August 10, 1993",
        "Qualified trade or business"
      ]
    },
