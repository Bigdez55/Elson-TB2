  "trust_fundamentals": {
    "definition": "A trust is a fiduciary arrangement where a trustee holds legal title to property for the benefit of beneficiaries according to trust terms.",
    "parties": {
      "grantor_settlor_trustor": {
        "description": "Person who creates and funds the trust",
        "alternate_names": ["Grantor", "Settlor", "Trustor"]
      },
      "trustee": {
        "description": "Person or entity that holds legal title and manages trust assets",
        "types": ["Individual trustee", "Corporate trustee", "Co-trustees"]
      },
      "beneficiaries": {
        "description": "Persons entitled to benefit from trust assets",
        "types": {
          "current_beneficiaries": "Entitled to current distributions",
          "remainder_beneficiaries": "Entitled to assets at trust termination"
        }
      },
      "trust_protector": {
        "description": "Third party with oversight powers over trustee"
      }
    }
  },
  "fiduciary_duties": {
    "overview": "Trustees are held to the highest legal standard of conduct",
    "core_duties": {
      "duty_of_loyalty": {
        "description": "Act solely in beneficiaries' interests, not self-interest",
        "requirements": [
          "Avoid conflicts of interest",
          "No self-dealing",
          "No personal profit from position",
          "Impartial treatment of beneficiaries",
          "Full disclosure of material facts"
        ],
        "self_dealing_examples": [
          "Buying trust assets for self",
          "Lending trust money to self",
          "Using trust property for personal benefit",
          "Hiring self or family for services"
        ]
      },
      "duty_of_care": {
        "description": "Exercise reasonable skill and diligence",
        "prudent_investor_standard": {
          "description": "Manage investments as prudent investor would",
          "requirements": [
            "Diversify unless otherwise prudent",
            "Consider risk/return objectives",
            "Consider beneficiaries' needs",
            "Act with care, skill, and caution"
          ]
        },
        "delegation": {
          "allowed": "Can delegate to qualified advisors",
          "requirements": [
            "Exercise care in selecting agents",
            "Define scope of delegation",
            "Monitor agent performance",
            "Review and act on information received"
          ]
        }
      },
      "duty_of_impartiality": {
        "description": "Balance interests of current vs remainder beneficiaries",
        "tensions": [
          "Income beneficiaries want higher yields",
          "Remainder beneficiaries want growth",
          "Trust terms may provide guidance"
        ],
        "total_return_approach": "Some states allow conversion to total return unitrust"
      },
      "duty_of_good_faith": {
        "description": "Act honestly and fairly",
        "requirements": [
          "Follow trust terms",
          "Make decisions for proper purposes",
          "Exercise discretion reasonably"
        ]
      }
    }
