  "goal_progression_calculator": {
    "description": "Calculate realistic timeline and required savings to reach target tier",
    "inputs_required": [
      "current_assets",
      "annual_income",
      "annual_savings_rate",
      "target_tier",
      "expected_return_rate",
      "time_horizon"
    ],
    "formula": {
      "future_value": "PV * (1 + r)^n + PMT * [((1 + r)^n - 1) / r]",
      "variables": {
        "PV": "Present value (current assets)",
        "r": "Expected annual return",
        "n": "Number of years",
        "PMT": "Annual contribution"
      }
    },
    "savings_rate_targets": {
      "minimum": 0.10,
      "recommended": 0.20,
      "aggressive": 0.30,
      "fire_level": 0.50
    }
  },
