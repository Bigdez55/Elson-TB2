  "goal_planning_api_structure": {
    "endpoint": "/wealth/goals/create-plan",
    "request_schema": {
      "current_situation": {
        "age": "integer",
        "annual_income": "number",
        "current_assets": "number",
        "monthly_savings": "number",
        "debt": "number",
        "current_tier": "string"
      },
      "goals": {
        "target_tier": "string",
        "target_assets": "number (optional)",
        "target_timeline": "integer (years, optional)",
        "specific_goals": [
          "retirement_age",
          "children_education",
          "home_purchase",
          "business_ownership",
          "family_office"
        ]
      },
      "constraints": {
        "max_risk_tolerance": "conservative|moderate|aggressive",
        "career_flexibility": "low|medium|high",
        "geographic_flexibility": "boolean"
      }
    },
    "response_schema": {
      "plan_summary": {
        "feasibility": "highly_achievable|achievable|stretch|aggressive",
        "recommended_timeline": "integer (years)",
        "required_savings_rate": "decimal",
        "key_milestones": "array"
      },
      "yearly_roadmap": "array of yearly plans",
      "acceleration_strategies": "array of strategies with impact scores",
      "risk_factors": "array of potential obstacles",
      "advisor_recommendations": "array of professionals to engage"
    }
  },
