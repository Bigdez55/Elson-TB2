  "governance_overview": {
    "definition": "Family governance encompasses the structures, policies, and processes that guide decision-making, manage family dynamics, and ensure effective stewardship of family wealth across generations.",
    "importance": [
      "Provides structure for decision-making",
      "Manages family dynamics and conflicts",
      "Ensures continuity across generations",
      "Protects family assets and values",
      "Professionalizes family wealth management"
    ],
    "key_components": [
      "Investment Committee",
      "Family Council",
      "Family Office Board/Advisory Board",
      "Audit Committee",
      "Governance Documents"
    ]
  },
  "investment_committee": {
    "purpose": "Provide oversight of investment strategy and performance (not day-to-day management)",
    "meeting_frequency": "Typically quarterly",
    "composition": {
      "recommended_members": [
        "Family members with investment expertise",
        "Chief Investment Officer (CIO)",
        "External independent advisors with specialized knowledge"
      ],
      "size": "3-7 members typical",
      "chair": "Often senior family member or CIO"
    },
    "charter_components": {
      "purpose_and_scope": "Define committee's role and boundaries",
      "authority": "Decision-making vs advisory authority",
      "voting_standards": "Majority, supermajority, or consensus",
      "meeting_frequency": "Quarterly minimum recommended",
      "quorum_requirements": "Minimum attendance for valid decisions",
      "relationship_to_other_bodies": "How it interfaces with family council, board"
    },
    "key_responsibilities": [
      "Review and approve Investment Policy Statement (IPS)",
      "Monitor portfolio performance against benchmarks",
      "Review asset allocation and rebalancing",
      "Evaluate and select investment managers",
      "Oversee risk management",
      "Review and approve major investments",
      "Ensure compliance with IPS"
    ],
    "investment_policy_statement": {
      "definition": "Document outlining investment philosophy, objectives, and guidelines",
      "key_sections": [
        {
          "section": "Investment Objectives",
          "content": ["Return targets", "Risk tolerance", "Time horizon", "Liquidity needs"]
        },
        {
          "section": "Asset Allocation",
          "content": ["Target percentages", "Allowable ranges", "Rebalancing triggers"]
        },
        {
          "section": "Investment Guidelines",
          "content": ["Permitted investments", "Prohibited investments", "Concentration limits"]
        },
        {
          "section": "Manager Selection",
          "content": ["Selection criteria", "Due diligence process", "Performance evaluation"]
        },
        {
          "section": "Risk Management",
          "content": ["Risk metrics", "Limits", "Monitoring frequency"]
        },
        {
          "section": "Reporting",
          "content": ["Report format", "Frequency", "Recipients"]
        }
      ],
      "review_frequency": "Annual minimum, or when circumstances change"
    }
  },
  "family_council": {
    "purpose": "Provide forum for multi-generational family alignment on values, mission, and priorities",
    "meeting_frequency": "Quarterly or semi-annually",
    "composition": {
      "members": "Representatives from different generations and family branches",
      "selection": "May be elected, appointed, or voluntary",
      "facilitator": "Often external professional facilitator"
    },
    "key_functions": [
      "Align on family values and mission",
      "Discuss strategic priorities",
      "Address family governance issues",
      "Plan family education and development",
      "Manage family communication",
      "Address succession planning",
      "Resolve family conflicts"
    ],
    "best_practices": [
      {
        "practice": "Clear meeting agendas",
        "benefit": "Keeps discussions focused and productive"
      },
      {
        "practice": "Professional facilitation",
        "benefit": "Ensures neutrality and effective process"
      },
      {
        "practice": "Formal documentation of decisions",
        "benefit": "Creates accountability and institutional memory"
      },
      {
        "practice": "Inclusive representation",
        "benefit": "Ensures all family branches have voice"
      },
      {
        "practice": "Regular schedule",
        "benefit": "Maintains momentum and engagement"
      }
    ],
    "family_mission_statement": {
      "definition": "Document articulating family's shared values, purpose, and aspirations",
