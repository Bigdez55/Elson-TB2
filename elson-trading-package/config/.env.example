# Elson Wealth Platform - Environment Configuration Template
# Copy this file to .env and fill in the actual values
# NEVER commit .env files to version control

# General Settings
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
PROJECT_NAME="Elson Wealth"
VERSION="1.0.0-beta"
API_V1_STR="/api/v1"

# Security Settings - GENERATE YOUR OWN KEYS
SECRET_KEY="CHANGE_ME_GENERATE_32_CHAR_RANDOM_STRING"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=43200
SESSION_ENABLED=true
SESSION_EXPIRY_MINUTES=1440

# Encryption Keys - GENERATE YOUR OWN KEYS
JWT_SECRET_KEY="CHANGE_ME_GENERATE_SECURE_KEY"
COOKIE_ENCRYPTION_KEY="CHANGE_ME_GENERATE_SECURE_KEY"
DATABASE_ENCRYPTION_KEY="CHANGE_ME_GENERATE_SECURE_KEY"

# PostgreSQL Database Settings
DATABASE_URL="postgresql://username:password@localhost:5432/elson"
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO_SQL=false

# Cloud SQL Configuration (for production)
CLOUD_SQL_CONNECTION_NAME=""
CLOUD_SQL_DATABASE_NAME="elson_production"
CLOUD_SQL_USERNAME="elson_app"
CLOUD_SQL_PASSWORD="CHANGE_ME_SECURE_PASSWORD"
CLOUD_SQL_HOST="127.0.0.1"
CLOUD_SQL_PORT=5432

# Redis Settings
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=20
REDIS_TIMEOUT=2
REDIS_SENTINEL_ENABLED=false
REDIS_CLUSTER_ENABLED=false
USE_MOCK_REDIS="true"

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://localhost:5173", "http://127.0.0.1:5173"]

# API Provider Keys - GET YOUR OWN KEYS
ALPHA_VANTAGE_API_KEY="YOUR_ALPHA_VANTAGE_API_KEY"
FINNHUB_API_KEY="YOUR_FINNHUB_API_KEY"
FMP_API_KEY="YOUR_FMP_API_KEY"
POLYGON_API_KEY="YOUR_POLYGON_API_KEY"
COINBASE_API_KEY="YOUR_COINBASE_API_KEY"

# Broker Settings
DEFAULT_BROKER="paper"
BROKER_PRIORITY_LIST=["paper"]
PAPER_TRADING_ENABLED=true
PAPER_TRADING_SLIPPAGE=0.0005
PAPER_TRADING_COMMISSION=0.99
PAPER_TRADING_DELAY_SECONDS=1

# Broker API Keys - GET YOUR OWN KEYS
SCHWAB_API_KEY="YOUR_SCHWAB_API_KEY"
SCHWAB_SECRET="YOUR_SCHWAB_SECRET"
ALPACA_API_KEY_ID="YOUR_ALPACA_API_KEY_ID"
ALPACA_API_SECRET="YOUR_ALPACA_API_SECRET"

# WebSocket Settings
WEBSOCKET_HOST="0.0.0.0"
WEBSOCKET_PORT=8001
API_HOST="0.0.0.0"
API_PORT=8000

# Trading Settings
DEFAULT_COMMISSION_RATE=0.0035
MIN_ORDER_AMOUNT=1.0
MAX_ORDER_AMOUNT=1000000.0
RISK_FREE_RATE=0.02

# Fractional Share Settings
FRACTIONAL_SHARE_ENABLED=true
MIN_FRACTIONAL_AMOUNT=1.0
MIN_FRACTIONAL_QUANTITY=0.0001
FRACTIONAL_PRECISION=8
AUTO_AGGREGATE_FRACTIONAL_ORDERS=true

# Payment Processing - GET YOUR OWN KEYS
STRIPE_API_KEY="YOUR_STRIPE_API_KEY"
STRIPE_WEBHOOK_SECRET="YOUR_STRIPE_WEBHOOK_SECRET"

# PayPal Settings - GET YOUR OWN KEYS
PAYPAL_CLIENT_ID="YOUR_PAYPAL_CLIENT_ID"
PAYPAL_CLIENT_SECRET="YOUR_PAYPAL_CLIENT_SECRET"
PAYPAL_WEBHOOK_ID="YOUR_PAYPAL_WEBHOOK_ID"
PAYPAL_SANDBOX_MODE=true

# Feature Flags
EDUCATIONAL_MODE_ENABLED=true
CACHE_ENABLED=true
BACKGROUND_WORKERS=10
RATE_LIMIT_ENABLED=false

# Admin Credentials - CHANGE THESE IMMEDIATELY
FIRST_SUPERUSER_EMAIL="admin@yourcompany.com"
FIRST_SUPERUSER_USERNAME="admin"
FIRST_SUPERUSER_PASSWORD="CHANGE_ME_SECURE_ADMIN_PASSWORD"

# Secrets Management
SECRET_BACKEND="env"
VAULT_ENABLED=false
AWS_SECRETS_ENABLED=false
GCP_SECRETS_ENABLED=false