# Elson Wealth Platform - Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env files to version control
# Use secure secret management in production (Vault, AWS Secrets Manager, etc.)

# General Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
PROJECT_NAME="Elson Wealth"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# Security Settings - MUST BE SECURE IN PRODUCTION
SECRET_KEY="GENERATE_SECURE_256_BIT_KEY"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60
SESSION_ENABLED=true
SESSION_EXPIRY_MINUTES=480
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Encryption Keys - GENERATE SECURE KEYS
JWT_SECRET_KEY="GENERATE_SECURE_256_BIT_KEY"
COOKIE_ENCRYPTION_KEY="GENERATE_SECURE_256_BIT_KEY"
DATABASE_ENCRYPTION_KEY="GENERATE_SECURE_256_BIT_KEY"

# Cloud SQL Configuration (Production)
CLOUD_SQL_CONNECTION_NAME="your-project:region:instance-name"
CLOUD_SQL_DATABASE_NAME="elson_production"
CLOUD_SQL_USERNAME="elson_app"
CLOUD_SQL_PASSWORD="SECURE_PRODUCTION_PASSWORD"
CLOUD_SQL_HOST="127.0.0.1"
CLOUD_SQL_PORT=5432

# Redis Settings (Production)
REDIS_URL="redis://redis-cluster:6379/0"
REDIS_MAX_CONNECTIONS=50
REDIS_TIMEOUT=5
REDIS_SENTINEL_ENABLED=true
REDIS_CLUSTER_ENABLED=false
USE_MOCK_REDIS="false"

# CORS Settings (Production)
ALLOWED_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]

# API Provider Keys - PRODUCTION KEYS
ALPHA_VANTAGE_API_KEY="YOUR_PRODUCTION_ALPHA_VANTAGE_KEY"
FINNHUB_API_KEY="YOUR_PRODUCTION_FINNHUB_KEY"
FMP_API_KEY="YOUR_PRODUCTION_FMP_KEY"
POLYGON_API_KEY="YOUR_PRODUCTION_POLYGON_KEY"
COINBASE_API_KEY="YOUR_PRODUCTION_COINBASE_KEY"

# Broker Settings (Production)
DEFAULT_BROKER="schwab"
BROKER_PRIORITY_LIST=["schwab", "alpaca", "paper"]
PAPER_TRADING_ENABLED=false

# Broker API Keys - PRODUCTION KEYS
SCHWAB_API_KEY="YOUR_PRODUCTION_SCHWAB_KEY"
SCHWAB_SECRET="YOUR_PRODUCTION_SCHWAB_SECRET"
ALPACA_API_KEY_ID="YOUR_PRODUCTION_ALPACA_KEY_ID"
ALPACA_API_SECRET="YOUR_PRODUCTION_ALPACA_SECRET"
ALPACA_PAPER_TRADING=false

# WebSocket Settings (Production)
WEBSOCKET_HOST="0.0.0.0"
WEBSOCKET_PORT=8001
API_HOST="0.0.0.0"
API_PORT=8000

# Trading Settings (Production)
DEFAULT_COMMISSION_RATE=0.0035
MIN_ORDER_AMOUNT=1.0
MAX_ORDER_AMOUNT=1000000.0
RISK_FREE_RATE=0.02

# Payment Processing - PRODUCTION KEYS
STRIPE_API_KEY="sk_live_YOUR_PRODUCTION_STRIPE_KEY"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_PRODUCTION_WEBHOOK_SECRET"

# PayPal Settings - PRODUCTION KEYS
PAYPAL_CLIENT_ID="YOUR_PRODUCTION_PAYPAL_CLIENT_ID"
PAYPAL_CLIENT_SECRET="YOUR_PRODUCTION_PAYPAL_CLIENT_SECRET"
PAYPAL_WEBHOOK_ID="YOUR_PRODUCTION_PAYPAL_WEBHOOK_ID"
PAYPAL_SANDBOX_MODE=false

# Feature Flags (Production)
EDUCATIONAL_MODE_ENABLED=true
CACHE_ENABLED=true
BACKGROUND_WORKERS=20
RATE_LIMIT_ENABLED=true

# Admin Credentials - SECURE PRODUCTION CREDENTIALS
FIRST_SUPERUSER_EMAIL="admin@yourcompany.com"
FIRST_SUPERUSER_USERNAME="admin"
FIRST_SUPERUSER_PASSWORD="SECURE_PRODUCTION_ADMIN_PASSWORD"

# Secrets Management (Production)
SECRET_BACKEND="vault"
VAULT_ENABLED=true
VAULT_URL="https://vault.yourdomain.com"
VAULT_TOKEN="SECURE_VAULT_TOKEN"
VAULT_SECRET_PATH="elson/secrets"

# Alternative: AWS Secrets Manager
# SECRET_BACKEND="aws"
# AWS_SECRETS_ENABLED=true
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY"
# AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_KEY"

# Alternative: GCP Secret Manager
# SECRET_BACKEND="gcp"
# GCP_SECRETS_ENABLED=true
# GCP_PROJECT_ID="your-project-id"
# GCP_SERVICE_ACCOUNT_KEY_PATH="/path/to/service-account.json"

# Monitoring & Alerting
SMTP_SERVER="smtp.yourdomain.com"
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME="alerts@yourdomain.com"
SMTP_FROM_EMAIL="alerts@yourdomain.com"
ALERT_RECIPIENTS=["admin@yourdomain.com", "devops@yourdomain.com"]

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=90
ELK_LOGGING_ENABLED=true
ELK_HOST="elasticsearch.yourdomain.com"
ELK_PORT=9200