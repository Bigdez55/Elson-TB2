FROM python:3.10-slim

# Create a non-root user for running the application
RUN groupadd -r elson && useradd -r -g elson -m -d /home/elson elson

# Set the working directory (owned by root initially)
WORKDIR /app

# Install only essential system dependencies with minimal additional packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    postgresql-client \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get autoremove -y

# Copy requirements file
COPY requirements.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create logs directory with proper permissions
RUN mkdir -p /app/logs && \
    chown -R elson:elson /app/logs

# Set proper permissions for the app directory
RUN chown -R elson:elson /app

# Set environment variables for Python
ENV PYTHONPATH=/app \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_NO_CACHE_DIR=1

# Switch to non-root user
USER elson

# Add health check
HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1

# Set entry point command
CMD ["python", "-m", "engine.trade_executor"]